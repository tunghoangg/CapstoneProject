@using RAFS.Core.DTO
@model ForgotPasswordModel

@{
    Layout = "_LoginLayout";
    ViewBag.Title = "Forgot Password";
}

<style>

</style>

<head>
    <link rel="icon" type="image/png" href="~/Assets/HomePage/img/core-img/rafs.ico">
</head>

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <div class="brand-logo">
                            <a asp-action="Index" asp-controller="Home">
                                <img src="~/Assets/HomePage/img/core-img/rafs-logo.png" alt="logo">
                            </a>
                        </div>
                        <h4>Xin chào!</h4>
                        <h6 class="font-weight-light">Hãy cung cấp địa chỉ email của bạn.</h6>
                        <form class="pt-3" method="post">
                            <div class="form-group text-success">
                                @Html.ValidationMessage("confirm")
                            </div>
                            <div class="form-group">
                                <input type="text" asp-for="Email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="mt-3">
                                <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit">GỬI</button>
                            </div>
                            <div class="text-center mt-4 font-weight-light">
                                Đã nhớ mật khẩu? <a href="/Login" class="text-primary">Đăng nhập</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
<!-- container-scroller -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

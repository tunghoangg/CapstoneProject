@using RAFS.Core.DTO
@model RegistrationDTO
@{
    Layout = "_RegisterLayout";
    var emailParameter = ViewContext.RouteData.Values["Email"];
    var redirectFrom = ViewContext.RouteData.Values["RedirectFrom"];
}

<style>
    /* Hide spinner arrows for input type number */
    input[type="number"]::-webkit-outer-spin-button,
    input[type="number"]::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type="number"] {
        -moz-appearance: textfield; /* Firefox */
    }
</style>

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <div class="brand-logo">
                            <a asp-action="Index" asp-controller="Home">
                                <img src="~/Assets/HomePage/img/core-img/rafs-logo.png" alt="logo">
                            </a>
                        </div>
                        <h4>Đăng ký tài khoản</h4>
                        <form class="pt-3" method="post" asp-controller="Authentication" asp-action="Register">
                            <span>@TempData["FailedExternalLogin"]</span>
                            
                            <div class="form-group">
                                <input type="text" asp-for="UserName" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Tên người dùng">
                                @*  <span asp-validation-for="UserName" class="text-danger"></span> *@
                            </div>
                            <div class="form-group">
                                <input type="email" asp-for="Email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Email">
                                @* <span asp-validation-for="Email" class="text-danger"></span> *@
                            </div>
                            <div class="form-group">
                                <input type="password" asp-for="Password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Mật khẩu">
                                @* <span asp-validation-for="Password" class="text-danger"></span> *@
                            </div>
                            <div class="form-group">
                                <input type="password" asp-for="ConfirmPassword" class="form-control form-control-lg" id="exampleInputPassword2" placeholder="Nhập lại mật khẩu">
                                @* <span asp-validation-for="ConfirmPassword" class="text-danger"></span> *@
                            </div>
                            <div class="form-group">
                                <input type="number" asp-for="PhoneNumber" class="form-control form-control-lg" id="exampleInputPhone" placeholder="Số điện thoại">
                                @* <span asp-validation-for="PhoneNumber" class="text-danger"></span> *@
                            </div>
                            
                            @Html.ValidationSummary()

                            <div class="mt-3">
                                <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit">ĐĂNG KÝ</button>
                            </div>


                            <div class="text-center mt-4 font-weight-light">
                                Already have an account? <a asp-action="Login" asp-controller="Authentication" class="text-primary">Đăng nhập</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
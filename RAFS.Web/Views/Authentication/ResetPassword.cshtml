@using RAFS.Core.DTO
@model ResetPasswordModel

@{
    Layout = "_LoginLayout";
    ViewBag.Title = "Reset Password";
}

<style>
    .required-field::after {
        content: "*";
        color: red;
        margin-left: 2px
    }
</style>

<head>
    <link rel="icon" type="image/png" href="~/Assets/HomePage/img/core-img/rafs.ico">
    <title>Tạo mật khẩu mới</title>
</head>

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <div class="brand-logo">
                            <a asp-action="Index" asp-controller="Home">
                                <img src="~/Assets/HomePage/img/core-img/rafs-logo.png" alt="logo">
                            </a>
                        </div>
                        <h4>Xin chào!</h4>
                        <h6 class="font-weight-light">Hãy cung cấp địa chỉ email của bạn.</h6>
                        <form class="pt-3" method="post">
                            <div class="form-group">
                                <input type="text" asp-for="Email" type="hidden">
                                <input type="text" asp-for="Token" type="hidden">
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label required-field">Mật khẩu</label>
                                <input asp-for="Password" class="form-control" />
                                @* <span asp-validation-for="Password" class="text-danger"></span> *@
                                @* @Html.ValidationMessageFor(model => model.Password) *@
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="control-label required-field">Nhập lại mật khẩu</label>
                                <input asp-for="ConfirmPassword" class="form-control" />
                                @* <span asp-validation-for="ConfirmPassword" class="text-danger"></span> *@
                                @* @Html.ValidationMessageFor(model => model.ConfirmPassword) *@
                            </div>
                            
                            <div class="form-group text-danger">
                                @Html.ValidationSummary(false)
                            </div>
                            <div class="mt-3">
                                <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit">Đổi mật khẩu</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
<!-- container-scroller -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
